<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h style="text-align:center; font-size: 32px; background-color: blueviolet;">Login</h>
        <% include ./partials/messages %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit"  style="color: blueviolet; width: 100%;">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register" style="color: blueviolet;">Register</a>
        </p>
      </div>
    </div>
  </div>
  